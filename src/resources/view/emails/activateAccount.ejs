<%- include ('/emails/layout/header'); %>
<p>
  <%= i18n.__("%s, welcome to Miaum.", name); %>
</p>
<p>
  <%= i18n.__("Click the button below to confirm that you got our email."); %>
</p>
<table style="margin: 35px 0;" cellpadding="0" cellspacing="0" role="presentation">
  <tr>
    <th style="border-radius: 3px; line-height: 100%; background-color: #1890ff;">
      <a
        href="<%= link %>"
        style="color: #FFFFFF; display: block; padding: 15px 50px; text-decoration: none;"
      >
      <%= i18n.__("Confirm my email address"); %>
      </a>
    </th>
  </tr>
</table>

<p>
  <%= i18n.__("If you received this email by mistake, please disregard it or let us know at %s.", process.env.MAIL_FROM_ADDRESS); %>
</p>
<%- include ('/emails/layout/footer'); %>
